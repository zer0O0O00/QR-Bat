<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".qrcode_generater"
    android:background="@color/purple">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="287dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:srcCompat="@drawable/bat_logo"/>

    <TextView
        android:id="@+id/textView"

        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="70dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"

        android:textColor="@color/pink"
        android:textSize="30dp"
        android:fontFamily="@font/silkscreen_bold_eng"
        android:text="QR Bat"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_list_generate"
        style="@style/Widget.Material3.Button.IconButton.Outlined"

        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="85dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:gravity="center"
        android:fontFamily="@font/silkscreen_bold_eng"
        android:text="Generator"
        android:textColor="@color/pink"
        android:textSize="20dp"

        app:cornerRadius="-10dp"
        app:strokeColor="@color/stroke_purple"
        app:strokeWidth="5dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_list_scanner"
        style="@style/Widget.Material3.Button.IconButton.Outlined"

        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/button_list_generate"
        app:layout_constraintStart_toStartOf="@+id/button_list_generate"
        app:layout_constraintTop_toBottomOf="@+id/button_list_generate"

        android:fontFamily="@font/silkscreen_bold_eng"
        android:text="Scanner"
        android:textColor="@color/pink"
        android:textSize="20dp"

        app:cornerRadius="-10dp"
        app:strokeColor="@color/stroke_purple"
        app:strokeWidth="5dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_info_window"
        style="@style/Widget.Material3.Button.IconButton.Outlined"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/button_list_scanner"
        app:layout_constraintStart_toStartOf="@+id/button_list_scanner"
        app:layout_constraintTop_toBottomOf="@+id/button_list_scanner"

        android:fontFamily="@font/silkscreen_bold_eng"
        android:text="info"
        android:textColor="@color/pink"
        android:textSize="20dp"

        app:cornerRadius="-10dp"
        app:strokeColor="@color/stroke_purple"
        app:strokeWidth="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>