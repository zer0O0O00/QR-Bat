<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_scaner_home"
        style="@style/Widget.Material3.Button.IconButton.Outlined"

        android:layout_width="0dp"
        android:layout_height="37dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:drawableLeft="@drawable/baseline_keyboard_arrow_left_24"
        android:fontFamily="@font/silkscreen_bold_eng"
        android:textColor="@color/pink"
        android:textSize="20dp"

        app:cornerRadius="-10dp"
        app:strokeColor="@color/purple"/>

    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/scanner_view"

        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_scaner_home"

        app:autoFocusButtonColor="@color/pink"
        app:autoFocusButtonVisible="true"

        app:flashButtonColor="@color/pink"
        app:frameColor="@color/pink"
        app:maskColor="#EE181025"/>

    <ImageView
        android:id="@+id/stroke"
        app:srcCompat="@drawable/stroke_purple_5"

        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_scaner_home"/>

    <TextView
        android:id="@+id/text_scan"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanner_view"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scanner_view"

        android:fontFamily="@font/public_pixel_rus"
        android:gravity="center"
        android:text="Можешь сканировать..."
        android:textColor="@color/pink"
        android:textSize="12dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_scan"
        style="@style/Widget.Material3.Button.IconButton.Outlined"

        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="85dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_scan"

        android:fontFamily="@font/silkscreen_bold_eng"
        android:text="Scan"
        android:textColor="@color/pink"
        android:textSize="20dp"

        app:cornerRadius="-10dp"
        app:strokeColor="@color/stroke_purple"
        app:strokeWidth="5dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_copy"
        style="@style/Widget.Material3.Button.IconButton.Outlined"

        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="85dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_scan"

        android:fontFamily="@font/silkscreen_bold_eng"
        android:text="Copy"
        android:textColor="@color/pink"
        android:textSize="20dp"

        app:cornerRadius="-10dp"
        app:strokeColor="@color/stroke_purple"
        app:strokeWidth="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
